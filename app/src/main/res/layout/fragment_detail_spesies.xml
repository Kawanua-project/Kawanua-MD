<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize"
    tools:context=".ui.detailspesies.DetailSpesiesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_detail_spesies"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/nama_spesies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:fontFamily="@font/poppins_bold"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/iv_detail_spesies"
            app:layout_constraintStart_toStartOf="@+id/iv_detail_spesies"
            app:layout_constraintTop_toBottomOf="@+id/iv_detail_spesies"
            tools:text="Pantera Tigris" />

        <TextView
            android:id="@+id/tv_detail_spesies"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="4dp"
            android:fontFamily="@font/poppins_medium"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="@+id/nama_spesies"
            app:layout_constraintStart_toStartOf="@+id/nama_spesies"
            app:layout_constraintTop_toBottomOf="@+id/nama_spesies"
            tools:text="@tools:sample/lorem/random" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>