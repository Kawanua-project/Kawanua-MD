<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detailnews.DetailNewsFragment">

    <ImageView
        android:id="@+id/iv_detail_news"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:fontFamily="@font/poppins_bold"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_detail_news"
        tools:text="Pantera Tigris" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="@+id/judul"
        app:layout_constraintStart_toStartOf="@+id/judul"
        app:layout_constraintTop_toBottomOf="@+id/judul"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="8dp">

        <TextView
            android:id="@+id/tv_detail_spesies"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fontFamily="@font/poppins_medium"
            android:padding="8dp"
            android:justificationMode="inter_word"
            tools:text="@tools:sample/lorem/random" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>